            resultMap="SysRoleResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_role
        <where>
            <if test="id != null">AND id = #{id}</if>
            <if test="key != null">AND key = #{key}</if>
            <if test="roleName != null">AND role_name = #{roleName}</if>
